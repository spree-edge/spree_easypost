<div data-hook="admin_shipping_category_form_fields">
  <div data-hook="name" class="form-group">
    <%= f.field_container :name do %>
      <%= f.label :name, Spree.t(:name) %><br>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.error_message_on :name %>
    <% end %>
  </div>
  <div data-hook='admin_shipping_category_easypost'>
    <%= f.field_container :use_easypost, class: ['form-check'] do %>
      <%= f.check_box :use_easypost, class: 'form-check-input' %>
      <%= f.label :use_easypost, Spree.t(:use_easypost), class: 'form-check-label' %>
    <% end %>
  </div>
</div>
