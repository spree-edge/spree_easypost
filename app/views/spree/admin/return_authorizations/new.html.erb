<%= render partial: 'spree/admin/shared/order_tabs', locals: { current: :return_authorizations } %>

<% content_for :page_title do %>
  / <%= Spree.t(:new_return_authorization) %>
<% end %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @return_authorization } %>
<%= form_for [:admin, @order, @return_authorization] do |f| %>
  <fieldset>
    <%= render partial: 'form', locals: { f: f } %>
    <div data-hook='admin_return_authorizations_easypost'>
      <%= f.field_container :custom_weight, class: ['form-group'] do %>
        <%= f.label :custom_weight, Spree.t(:custom_weight) %>
        <%= f.number_field :custom_weight, min: 0, step: 0.1, class: 'form-control' %>
      <% end %>
      <%= f.field_container :create_label, class: ['form-check'] do %>
        <%= f.check_box :create_label, checked: true, class: 'form-check-input' %>
        <%= f.label :create_label, Spree.t(:create_label), class: 'form-check-label' %>
      <% end %>
    </div>
    <div class="form-actions" data-hook="buttons">
      <%= button Spree.t(:create), 'save.svg' %>
      <span class="or"><%= Spree.t(:or) %></span>
      <%= button_link_to Spree.t('actions.cancel'), spree.admin_order_return_authorizations_url(@order), icon: 'cancel.svg' %>
    </div>
  </fieldset>
<% end %>
